{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "noLib": false,
    "declaration": true,
    "lib": [
      "ESNext"
    ],
    "types": [
      "node"
    ],
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ]
}
