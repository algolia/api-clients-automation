{
  "extends": [
    "config:js-app",
    "algolia"
  ],
  "enabledManagers": [
    "npm",
    "nvm",
    "gradle",
    "composer"
  ],
  "baseBranches": [
    "chore/renovateBaseBranch"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "required_provider"
      ],
      "rangeStrategy": "bump"
    }
  ],
  "ignorePaths": [
    "**/client-abtesting/**",
    "**/client-analytics/**",
    "**/client-insights/**",
    "**/client-personalisation/**",
    "**/client-predict/**",
    "**/client-query-suggestions/**",
    "**/client-search/**",
    "**/client-sources/**",
    "**/recommend/**"
  ],
  "prHourlyLimit": 10,
  "prConcurrentLimit": 50
}
