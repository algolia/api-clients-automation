{
  "name": "algoliasearch-client-javascript",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:all": "lerna run build --parallel",
    "build:many": "lerna run build --parallel --scope ${0:-'{@algolia/*,algoliasearch}'}",
    "clean": "lerna run clean --parallel",
    "release:bump": "lerna version ${0:-patch} --no-changelog --no-git-tag-version --no-push --exact --force-publish --yes",
    "release:publish": "ts-node --project tsconfig.script.json scripts/publish.ts",
    "test:lint": "eslint . --ext .js,.ts",
    "test:size": "size-limit",
    "test:types": "yarn tsc --noEmit"
  },
  "devDependencies": {
    "@babel/core": "7.18.10",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-transform-runtime": "7.18.10",
    "@babel/preset-env": "7.18.10",
    "@babel/runtime": "7.18.9",
    "@rollup/plugin-babel": "5.3.1",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@size-limit/file": "8.0.0",
    "@size-limit/preset-small-lib": "8.0.0",
    "@size-limit/time": "8.0.0",
    "@types/jest": "28.1.6",
    "@types/node": "16.11.47",
    "@types/rollup-plugin-node-globals": "1.4.1",
    "@types/semver": "7.3.10",
    "execa": "5.1.1",
    "lerna": "5.3.0",
    "nx": "14.5.4",
    "rollup": "2.77.2",
    "rollup-plugin-node-globals": "1.4.0",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.32.1",
    "semver": "7.3.7",
    "size-limit": "8.0.0",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": ">= 14.0.0",
    "yarn": "^3.0.0"
  },
  "size-limit": [
    {
      "path": "packages/algoliasearch/dist/algoliasearch.umd.js",
      "limit": "9.45KB"
    },
    {
      "path": "packages/algoliasearch/dist/lite/lite.umd.js",
      "limit": "4.25KB"
    },
    {
      "path": "packages/client-abtesting/dist/client-abtesting.umd.js",
      "limit": "4.35KB"
    },
    {
      "path": "packages/client-analytics/dist/client-analytics.umd.js",
      "limit": "5.00KB"
    },
    {
      "path": "packages/client-insights/dist/client-insights.umd.js",
      "limit": "4.15KB"
    },
    {
      "path": "packages/client-personalization/dist/client-personalization.umd.js",
      "limit": "4.35KB"
    },
    {
      "path": "packages/client-query-suggestions/dist/client-query-suggestions.umd.js",
      "limit": "4.40KB"
    },
    {
      "path": "packages/client-search/dist/client-search.umd.js",
      "limit": "7.45KB"
    },
    {
      "path": "packages/client-sources/dist/client-sources.umd.js",
      "limit": "4.20KB"
    },
    {
      "path": "packages/predict/dist/predict.umd.js",
