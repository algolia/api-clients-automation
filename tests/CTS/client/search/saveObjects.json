[
  {
    "testName": "call saveObjects without error",
    "autoCreateClient": false,
    "steps": [
      {
        "type": "createClient",
        "parameters": {
          "appId": "test-app-id",
          "apiKey": "test-api-key",
          "customHosts": [
            {
              "port": 6680
            }
          ]
        }
      },
      {
        "type": "method",
        "method": "saveObjects",
        "parameters": {
          "indexName": "cts_e2e_saveObjects_${{language}}",
          "objects": [
            {
              "objectID": "1",
              "name": "Adam"
            },
            {
              "objectID": "2",
              "name": "Benoit"
            }
          ]
        },
        "expected": {
          "type": "response",
          "match": [
            {
              "taskID": 333,
              "objectIDs": [
                "1",
                "2"
              ]
            }
          ]
        }
      }
    ]
  },
