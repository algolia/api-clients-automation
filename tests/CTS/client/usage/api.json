[
  {
    "testName": "calls api with correct read host",
    "autoCreateClient": false,
    "steps": [
      {
        "type": "createClient",
        "parameters": {
          "appId": "test-app-id",
          "apiKey": "test-api-key"
        }
      },
      {
        "type": "method",
        "object": "$client",
        "path": "customGet",
        "parameters": {
          "path": "test"
        },
        "expected": {
          "type": "host",
          "match": "test-app-id-dsn.algolia.net"
        }
      }
    ]
  },
