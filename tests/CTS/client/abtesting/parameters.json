[
  {
    "testName": "fallbacks to the alias when region is not given",
    "autoCreateClient": false,
    "steps": [
      {
        "type": "createClient",
        "parameters": {
          "appId": "my-app-id",
          "apiKey": "my-api-key",
          "region": ""
        },
        "expected": {
          "error": false
        }
      },
      {
        "type": "method",
        "object": "$client",
        "path": "getABTest",
        "parameters": [
          {
            "id": "test"
          }
        ],
        "expected": {
          "match": {
            "objectContaining": {
              "host": "analytics.us.algolia.com"
            }
          }
        }
      }
    ]
  },
  {
    "testName": "does not throw when region is given",
    "autoCreateClient": false,
    "steps": [
      {
        "type": "createClient",
        "parameters": {
          "appId": "my-app-id",
          "apiKey": "my-api-key",
          "region": "us"
        },
        "expected": {
          "error": false
        }
      }
    ]
  }
]
