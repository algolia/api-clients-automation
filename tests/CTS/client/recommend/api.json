[
  {
    "testName": "calls api with correct host",
    "autoCreateClient": false,
    "steps": [
      {
        "type": "createClient",
        "parameters": {
          "appId": "test-app-id",
          "apiKey": "test-api-key"
        },
        "expected": {}
      },
      {
        "type": "method",
        "object": "$client",
        "path": "getRecommendations",
        "parameters": {
          "requests": []
        },
        "expected": {
          "type": "host",
          "match": "test-app-id-dsn.algolia.net"
        }
      }
    ]
  },
  {
    "testName": "calls api with correct user agent",
    "steps": [
      {
        "type": "method",
        "object": "$client",
        "path": "getRecommendations",
        "parameters": {
          "requests": []
        },
        "expected": {
          "type": "userAgent",
          "match": "^Algolia for (Java|JavaScript) \\(\\d+\\.\\d+\\.\\d+\\)(; [a-zA-Z. ]+ (\\(\\d+\\.\\d+\\.\\d+\\))?)*(; Recommend (\\(\\d+\\.\\d+\\.\\d+\\)))(; [a-zA-Z. ]+ (\\(\\d+\\.\\d+\\.\\d+\\))?)*$"
        }
      }
    ]
  },
  {
    "testName": "calls api with correct timeouts",
    "steps": [
      {
        "type": "method",
        "object": "$client",
        "path": "getRecommendations",
        "parameters": {
          "requests": []
        },
        "expected": {
          "type": "timeouts",
          "match": {
            "connectTimeout": 2,
            "responseTimeout": 5
          }
        }
      }
    ]
  }
]
