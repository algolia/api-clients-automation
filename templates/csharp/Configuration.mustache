        Up = true,
        LastUse = DateTime.UtcNow,
        Accept = CallType.Read | CallType.Write,
      },
      new StatefulHost
      {
        Url = $"{appId}-3.algolianet.com",
        Up = true,
        LastUse = DateTime.UtcNow,
        Accept = CallType.Read | CallType.Write,
      }
    }.Shuffle();

    hosts.AddRange(commonHosts);
    return hosts;
  }
