        Url = $"{appId}.algolia.net", Up = true, LastUse = DateTime.UtcNow, Accept = CallType.Write,
      }
    };

    var commonHosts = new List<StatefulHost>
    {
      new StatefulHost
      {
        Url = $"{appId}-1.algolianet.com",
        Up = true,
        LastUse = DateTime.UtcNow,
        Accept = CallType.Read | CallType.Write,
      },
      new StatefulHost
      {
